<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <solid android:color="@android:color/darker_gray" />
        <stroke android:width="@dimen/welcome_page_radio_button_border" android:color="@android:color/darker_gray" />
        <corners android:radius="@dimen/welcome_page_radio_button_border_radius" />
    </shape>
</item>
<item>
    <shape>
        <solid android:color="@android:color/transparent" />
        <stroke android:width="@dimen/welcome_page_radio_button_border" android:color="@android:color/darker_gray" />
        <corners android:radius="@dimen/welcome_page_radio_button_border_radius" />
    </shape>
</item>
</selector>