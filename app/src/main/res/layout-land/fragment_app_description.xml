<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.dsychyov.sychyovmd.ui.fragments.AppDescriptionFragment"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/welcome_app_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/AppTheme.WelcomePageAppName"
            android:text="@string/app_name" />
        <TextView
            style="@style/AppTheme.WelcomePageAppDescription"
            android:text="@string/app_description" />
    </LinearLayout>
</LinearLayout>
